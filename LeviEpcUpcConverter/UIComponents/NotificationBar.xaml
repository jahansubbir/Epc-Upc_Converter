<Window x:Class="LeviEpcUpcConverter.UIComponents.NotificationBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeviEpcUpcConverter.UIComponents"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="NotificationBar" Height="120" Width="300" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterOwner">
    <Grid>
        <material:Card Width="290" Height="100" Background="SteelBlue">
            <Grid>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="290" Padding="10" Name="NotificationBlock">
                
            </TextBlock>
                <Button Background="LightBlue" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="OK" Name="OkButton" Click="OkButton_Click">
                    <Button.Margin>
                        <Thickness Left="20" Bottom="10"></Thickness>
                    </Button.Margin>
                    
                </Button>
            </Grid>
        </material:Card>
    </Grid>
</Window>
