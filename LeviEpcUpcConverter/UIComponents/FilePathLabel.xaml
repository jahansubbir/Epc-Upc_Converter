<UserControl x:Class="LeviEpcUpcConverter.UIComponents.FilePathLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeviEpcUpcConverter.UIComponents"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid>
        <Label Name="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Content="File">
            <Label.Margin>
                <Thickness Left="10"></Thickness></Label.Margin>
        </Label>
        <TextBox Name="FileName" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Text="FileName" Style="{DynamicResource MaterialDesignTextBox}" Width="700">
            <TextBox.Margin>
                <Thickness Left="70"></Thickness>
            </TextBox.Margin>
        </TextBox>
        
    </Grid>
</UserControl>
